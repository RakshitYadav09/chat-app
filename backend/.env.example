# Backend Environment Variables
# Copy this to .env for production deployment

# Server Configuration
NODE_ENV=production
PORT=10000

# Database Configuration
MONGODB_URI=mongodb+srv://your-username:your-password@cluster0.xxxxx.mongodb.net/chatapp?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# CORS Configuration
CORS_ORIGIN=https://chatapp-frontend.vercel.app
FRONTEND_URL=https://chatapp-frontend.vercel.app

# Optional: Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
MONITORING_INTERVAL=5000

# Optional: Embedding Configuration (using local transformers)
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_CACHE_SIZE=1000

# Legacy API Keys (not needed with local transformers)
# OPENAI_API_KEY=your_openai_api_key_here
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here
