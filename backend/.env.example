# Backend Environment Variables
# Copy this to .env for production deployment

# Server Configuration
NODE_ENV=production
PORT=10000

# Database Configuration
# Replace with your actual MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Authentication
# Generate a secure random string for JWT secret (at least 32 characters)
JWT_SECRET=replace_with_secure_random_string_here

# CORS Configuration
CORS_ORIGIN=https://chatapp-frontend.vercel.app
FRONTEND_URL=https://chatapp-frontend.vercel.app

# Optional: Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
MONITORING_INTERVAL=5000

# Optional: Embedding Configuration (using local transformers)
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_CACHE_SIZE=1000

# Legacy API Keys (not needed with local transformers)
# OPENAI_API_KEY=your_openai_api_key_here
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here
